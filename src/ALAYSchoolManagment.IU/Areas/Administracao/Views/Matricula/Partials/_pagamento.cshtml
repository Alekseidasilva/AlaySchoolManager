@using ALAYSchoolManager.Application.ViewModels.Shared
@model ALAYSchoolManager.Application.ViewModels.Shared.FormasPagamentosViewModel


<div class="container-fluid mt-0">
    <div class="row">
        <div class="col-1">
            <div class="row">
                <div class="card-body card-columns card-columns-pagamentos">
                    @foreach (FormasPagamentosViewModel item in ViewBag.formasPagamentos)
                    {
                        <label class="card-radio-btn">
                            @if (item.FormasPagamentoId == 1)
                            {
                                <input type="radio" name="demo" class="card-input-FormasPagamento d-none" id="pagNumerario" value="@item.FormasPagamentoId">
                                <div class="card card-body">
                                    <div class="content_head font-weight-bold">@item.FormasPagamentoDesignacao</div>
                                    <i class="fa-light fa-hand-holding-dollar" style="font-size: 500%"></i>
                                    <p class="content_sub">Entrega sonante de valores</p>
                                </div>
                            }
                            @if (item.FormasPagamentoId == 2)
                            {
                                <input type="radio" name="demo" class="card-input-FormasPagamento d-none" id="pagNumerario" value="@item.FormasPagamentoId">
                                <div class="card card-body">
                                    <div class="content_head font-weight-bold">@item.FormasPagamentoDesignacao</div>
                                    <i class="fa-regular fa-money-check-dollar-pen" style="font-size: 500%"></i>
                                    <p class="content_sub">Depsitado em uma de nossa contas bancarias</p>
                                </div>
                            }

                            @if (item.FormasPagamentoId == 3)
                            {
                                <input type="radio" name="demo" class="card-input-FormasPagamento d-none" id="pagNumerario" value="@item.FormasPagamentoId">
                                <div class="card card-body">
                                    <div class="content_head font-weight-bold">@item.FormasPagamentoDesignacao</div>
                                    <i class="fa-sharp fa-solid fa-money-bill-transfer" style="font-size: 500%"></i>
                                    <p class="content_sub">Transferencia da conta do Cliente para a conta da empresa</p>
                                </div>
                            }
                            @if (item.FormasPagamentoId == 102)
                            {
                                <input type="radio" name="demo" class="card-input-FormasPagamento d-none" id="pagNumerario" value="@item.FormasPagamentoId">
                                <div class="card card-body">
                                    <div class="content_head font-weight-bold">@item.FormasPagamentoDesignacao</div>
                                    <i class="fa-sharp fa-light fa-file-invoice-dollar" style="font-size: 500%"></i>
                                    <p class="content_sub">Será gerada a referencia para o pagamento</p>
                                </div>
                            }
                        </label>
                    }
                </div>
            </div>
        </div>
    </div>
</div>